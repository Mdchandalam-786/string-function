    <button onclick="button3()" id="myButton3">Click me</button>
    <button onclick="button4()" id="myButton4">Click me</button>
    <button onclick="button5()" id="myButton5">Click me</button>


    <script>
        a=document.getElementById("myButton");
        function button1(){
         document.body.style.backgroundColor = "lightblue";
         a.innerHTML = "You clicked me!";
         a.style.backgroundColor="#af4c4c";
        }

        function button2(){
            var v=prompt("who are you")
            alert("welcome "+v)
        }

        function button3(){
            var v=confirm("are you sure?")
            if(v==true){
                alert("ok");
            }
            else{
                alert("cancel");
            }
        }
        function button4(){
            open("https://www.example.com");
        }
        function button5(){
            setTimeout(function(){
                alert("This is a delayed alert!");
            }, 2000);
        }
    </script>
